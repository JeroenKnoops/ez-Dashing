{
  "dashboard": {
    "server": {
      "dataSourcePath": "/api/datasource/"
    },
    "dataSources": [
      {
        "name": "jira",
        "baseUrl": "https://jira:8989",
        "credentials": {
          "userName": "test",
          "password": "test"
        },
        "queries": [
          {
            "name": "todo",
            "refresh": 10,
            "path": "/rest/api/2/search?jql=PROJECT IN (similar-home-sys,bc-gas-sys,gas-service-composition-sys,gas-tariff-sys) AND type = \"Anomalie d'Implémentation\" AND statusCategory = \"To Do\" & fields=creator,priority",
            "mapping": {
              "todoTotal": "$.total",
              "todoIssuesKeys[]": "$.issues[*].key"
            }
          },
          {
            "name": "inProgress",
            "refresh": 10,
            "path": "/rest/api/2/search?jql=PROJECT IN (similar-home-sys,bc-gas-sys,gas-service-composition-sys,gas-tariff-sys) AND type = \"Anomalie d'Implémentation\" AND statusCategory = \"In Progress\" & fields=creator,priority",
            "mapping": {
              "inProgressTotal": "$.total",
              "inProgressIssuesKeys[]": "$.issues[*].key"
            }
          }
        ]
      },
      {
        "name": "sonar",
        "baseUrl": "https://sonar:1234",
        "credentials": {
          "userName": "test",
          "password": "test"
        },
        "queries": [
          {
            "name": "stats",
            "refresh": 10,
            "path": "/api/measures/component?componentKey=ubu.gii.dass.poolobject&metricKeys=coverage,lines,violations&format=json",
            "mapping": {
              "lines": "$.component.measures[?(@.metric == 'lines')].value",
              "coverage": "$.component.measures[?(@.metric == 'coverage')].value",
              "violations": "$.component.measures[?(@.metric == 'violations')].value"
            }
          }
        ]
      },
      {
        "name": "jenkins",
        "baseUrl": "https://jenkins:12345",
        "credentials": {
          "userName": "test",
          "password": "test"
        },
        "queries": [
          {
            "name": "lastBuild",
            "refresh": 2,
            "path": "/job/systemA/branch/master/lastBuild/api/json",
            "mapping": {
              "status": "$.result",
              "author": "$.changeSet.items[-1:].author.fullName"
            }
          }
        ]
      }
    ],
    "widgets": [
      {
        "type": "TeamWidget",
        "title": "SUPER TEAM"
      },
      {
        "type": "HelloWorldWidget",
        "title": "HELLO WORLD 2"
      },
      {
        "type": "ErrorWidget",
        "title": "SAMPLE ERROR"
      },
      {
        "type": "ClockWidget",
        "UTCOffset": 2
      },
      {
        "type": "SprintWidget",
        "sprintDates": [
          "2017-07-20",
          "2017-08-10"
        ],
        "sprintDuration": 21,
        "sprintOffset": 8
      },
      {
        "type": "JiraWidget",
        "title": "BUGS (ALL)",
        "dataSource": [
          "jira-todo", "jira-inProgress"
        ]
      },
      {
        "type": "JiraWidget",
        "title": "BUGS (P1)",
        "dataSource": [
          "jira-inProgress"
        ]
      },
      {
        "type": "SonarWidget",
        "title": "Sonar A",
        "dataSource": [ "sonar-stats" ]
      },
      {
        "type": "SonkinsWidget",
        "title": "Sonkins A",
        "dataSource": [
          "jenkins-lastBuild"
        ]
      }
    ],
    "avatars": [
      {
        "displayName": "Epithor",
        "jenkinsAuthorPattern": ".*epi",
        "url": "/img/avatars/epi.png"
      },
      {
        "displayName": "Pénelope",
        "jenkinsAuthorPattern": ".*Pénelope.*",
        "url": "/img/avatars/Penelope.png"
      },
      {
        "displayName": "Marc",
        "jenkinsAuthorPattern": ".*[mM]arc.*",
        "url": "/img/icon/good.png"
      }
    ],
    "thresholds": {
      "coverage": {
        "good": 64,
        "avg": 55,
        "bad": 0
      },
      "violations": {
        "bad": 10,
        "avg": 1,
        "good": 0
      },
      "bugs": {
        "bad": 10,
        "avg": 1,
        "good": 0
      },
      "memoryUsage": {
        "bad": 80,
        "avg": 70,
        "good": 0
      },
      "cpuUsage": {
        "bad": 80,
        "avg": 70,
        "good": 0
      },
      "fileDescriptorUsage": {
        "bad": 80,
        "avg": 70,
        "good": 0
      },
      "freeDiskSpaceInTemp": {
        "good": 40,
        "avg": 20,
        "bad": 0
      }
    },
    "grid": {
      "itemBreakpoints": {
        "width": {
          "lg": 1200,
          "md": 996,
          "sm": 768,
          "xs": 480,
          "xxs": 240,
          "xxxs": 0
        },
        "height": {
          "lg": 800,
          "md": 600,
          "sm": 400,
          "xs": 280,
          "xxs": 140,
          "xxxs": 0
        }
      },
      "breakpoints": {
        "lg": 1200,
        "md": 996,
        "sm": 768,
        "xs": 480,
        "xxs": 0
      },
      "cols": {
        "lg": 7,
        "md": 4,
        "sm": 4,
        "xs": 2,
        "xxs": 1
      },
      "layouts": {},
      "rowHeight": 120,
      "widget_w": 1,
      "widget_h": 1
    }
  }
}
